<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-3 mx-auto mt-3">
    <h2 class="mt-3">サインアップ</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="mb-3 mt-4">
      <%= f.label "サモナーネーム", class: "form-label" %>
      <%= f.text_field :summoner_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "サモナーネーム公開設定", class: "form-label" %><br />
      <%= f.radio_button :is_published, "closed", class: "form-check-input" %>
      <%= f.label "非公開", class: "form-check-label" %>
      <%= f.radio_button :is_published, "limited", class: "form-check-input" %>
      <%= f.label "相互フォローにのみ公開", class: "form-check-label" %>
      <%= f.radio_button :is_published, "opened", class: "form-check-input" %>
      <%= f.label "全体に公開", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= f.label "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "example@email.com", autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label "パスワード", class: "form-label" %><% if @minimum_password_length %><em>(<%= @minimum_password_length %>文字以上で入力してください)</em><% end %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="mb-3">
      <%= f.label "パスワード(確認用)", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit "サインアップ", class: "btn btn-primary" %>
    </div>

    <% end %>
    <%= render "public/shared/links" %>

  </div>
</div>