<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-4 mx-auto mt-3">
    <h2 class="mt-3">新規投稿</h2>
    <% if @friend.errors.any? %>
    <%= @friend.errors.count %>件のエラーが発生しました
    <ul>
    <% @friend.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>

    <%= form_with model: @friend, url: public_friends_path(@friend), method: :post do |f| %>
    <table class="table mt-3">
      <tr>
        <td>好きなチャンピオン(1体目)</td>
        <td>
          <%= f.select :favorite_champion, Friend.favorite_champions.keys.map {|k| [I18n.t("enums.friend.favorite_champions.#{k}"), k]}, {}, class: "form-select" %>
        </td>
      </tr>
      <tr>
        <td>好きなチャンピオン(2体目)</td>
        <td>
          <%= f.select :favorite_champion2, Friend.favorite_champion2s.keys.map {|k| [I18n.t("enums.friend.favorite_champion2s.#{k}"), k]}, {}, class: "form-select" %>
        </td>
      </tr>
      <tr>
        <td>好きなチャンピオン(3体目)</td>
        <td>
          <%= f.select :favorite_champion3, Friend.favorite_champion3s.keys.map {|k| [I18n.t("enums.friend.favorite_champion3s.#{k}"), k]}, {}, class: "form-select" %>
        </td>
      </tr>
      <tr>
        <td>自己紹介(500文字まで)</td>
        <td><%= f.text_area :introduction, class: "form-control" %></td>
      </tr>
      <tr>
        <td>ランク</td>
        <td><%= f.select :rank, Friend.ranks.keys.map {|k| [I18n.t("enums.friend.ranks.#{k}"), k]}, {}, class: "form-select" %></td>
      </tr>
      <tr>
        <td>募集目的</td>
        <td>
          <%= f.check_box :is_rank, class: "form-check-input" %>
          <%= f.label "ランク", class: "form-check-label" %>
      <%= f.radio_button :is_published, "limited", class: "form-check-input" %>
      <%= f.label "相互フォローにのみ公開", class: "form-check-label" %>
      <%= f.radio_button :is_published, "opened", class: "form-check-input" %>
      <%= f.label "全体に公開", class: "form-check-label" %>
        </td>
      </tr>
      <tr>
        <td>パスワード</td>
        <td><%= f.password_field :password, class: "form-control" %></td>
      </tr>
    </table>

    <div class="text-center"><%= f.submit "プロフィール更新", class: "btn btn-success me-3" %><%= link_to "戻る", :back, class: "btn btn-secondary" %></div>
    <% end %>
  </div>
</div>