<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-3 mx-auto mt-3">
    <h2 class="mt-3">サインイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-3">
      <%= f.label "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "example@email.com", autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label "パスワード", class: "form-label" %><% if @minimum_password_length %><em>(<%= @minimum_password_length %>文字以上で入力してください)</em><% end %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label "ログイン状態を維持", class: "form-check-label" %>
    </div>
    <% end %>

    <div class="mb-3">
      <%= f.submit "サインイン", class: "btn btn-primary" %>
    </div>

    <% end %>
    <%= render "public/shared/links" %>

  </div>
</div>
